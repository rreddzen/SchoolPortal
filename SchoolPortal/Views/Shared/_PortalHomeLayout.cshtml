<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> SchoolPortal - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/Portal.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="admin-page">
        <div class="admin-sidebar">
            <div class="logo-container">
                <span class="logo-text school">School</span>
                <span class="logo-text portal">Portal</span>
            </div>
            <nav class="side-nav">
                <ul id="navigationBar">
                    <li> @Html.ActionLink("Courses", "Index", "Courses")</li>
                    <li>@Html.ActionLink("Subjects", "Index", "Subjects")</li>
                </ul>
            </nav>
        </div>


        <div class="admin-body">
            <div class="admin-header">
                <div class="login-partial">
                    @Html.Partial("_LoginPartial")
                </div>
                @ViewContext.RouteData.Values["Controller"].ToString()
            </div>

            <div class="container-fluid body-content">
                @RenderBody()
            </div>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
